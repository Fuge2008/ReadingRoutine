    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/btn_fab_margins</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@color/color_white</item>
    </style>

    <style name="SelectableDarkBackgroundBorderless">
        <item name="android:background">@drawable/ripple_dark_effect_feedback</item>
    </style>

    <!-- Note Details theme. -->
    <style name="single_line_text_field">
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:paddingLeft">@dimen/margin_horizontal</item>
        <item name="android:paddingRight">@dimen/margin_horizontal</item>
        <item name="android:layout_height">@dimen/single_line_field_height</item>
    </style>

    <style name="divider">
        <item name="android:background">@color/theme_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>

    <style name="multiline_text_field">
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:paddingLeft">@dimen/margin_horizontal</item>
        <item name="android:paddingTop">@dimen/single_or_multiline_fields_top_padding</item>
        <item name="android:paddingRight">@dimen/margin_horizontal</item>
        <item name="android:paddingBottom">@dimen/single_or_multiline_fields_bottom_padding</item>
    </style>

    <style name="about_item_style">
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
